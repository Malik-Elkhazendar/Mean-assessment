# E2E Testing Environment Configuration
# This file is used for end-to-end testing

# Database Configuration
MONGO_URI_TEST=mongodb://127.0.0.1:27017/mean-assessment-e2e-test
MONGO_OPTIONS_AUTO_CREATE=true

# Server Configuration
PORT=3001
GLOBAL_PREFIX=api
NODE_ENV=test

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-e2e-testing-only
JWT_EXPIRES_IN=8h

# Email Configuration (Mock for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=noreply@mean-assessment-test.com

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_TTL=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:3001
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=error